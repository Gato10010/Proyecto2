<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="A_Inicio.F_Cobro_Controller">
   <children>
      <Label layoutX="130.0" layoutY="20.0" text="COBRAR">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <Label layoutX="40.0" layoutY="90.0" text="Total a Pagar:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <Label fx:id="lblTotal" layoutX="200.0" layoutY="90.0" text="0.00" textFill="RED">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      
      <Label layoutX="40.0" layoutY="150.0" text="Recibido:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <TextField fx:id="txtRecibido" layoutX="190.0" layoutY="145.0" onKeyReleased="#calcularCambio" prefHeight="30.0" prefWidth="150.0" />
      
      <Label layoutX="40.0" layoutY="210.0" text="Cambio:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      
      <Label fx:id="lblCambio" layoutX="200.0" layoutY="210.0" text="0.00" textFill="GREEN">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      
      <Button fx:id="btnFinalizar" layoutX="100.0" layoutY="280.0" mnemonicParsing="false" onAction="#finalizarVenta" prefHeight="40.0" prefWidth="200.0" text="IMPRIMIR TICKET" />
   </children>
</AnchorPane>